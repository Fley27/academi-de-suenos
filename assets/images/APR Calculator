--------- JS --------------

function calculateAPR() {
    const loanAmount = parseFloat(document.getElementById('loanAmount').value);
    const loanTerm = parseFloat(document.getElementById('loanTerm').value);
    const interestRate = parseFloat(document.getElementById('interestRate').value) / 100; // Convert percentage to decimal
    const loanFees = parseFloat(document.getElementById('loanFees').value);
    const compoundingFrequency = parseFloat(document.getElementById('compoundingFrequency').value);

    // Calculate the effective annual rate (EAR) 
    const EAR = Math.pow((1 + (interestRate / compoundingFrequency)), compoundingFrequency) - 1;

    // Calculate total interest for the term of the loan based on the EAR
    const totalInterest = loanAmount * EAR * (loanTerm / 12);

    // Calculate APR
    const apr = ((totalInterest + loanFees) / loanAmount) * (12 / loanTerm) * 100;

    const formattedAPR = isNaN(apr) ? '--' : apr.toFixed(2) + '%';
    document.getElementById('aprValue').innerHTML = formattedAPR;
    if (!isNaN(apr)) {
        document.getElementById('aprValue').classList.add('calculated');
    }
}